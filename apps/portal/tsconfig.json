{
  "compilerOptions": {
    "target": "ES2022",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "module": "ESNext",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "allowJs": true,
    "jsx": "react-jsx",
    "paths": {
      "@/*": ["./src/*"],
      "@obsidian-note-reviewer/ui/*": ["../../packages/ui/*"],
      "@obsidian-note-reviewer/editor": ["../../packages/editor/App.tsx"],
      "@obsidian-note-reviewer/editor/*": ["../../packages/editor/*"],
      "@obsidian-note-reviewer/collaboration": ["../../packages/collaboration/src/index.ts"],
      "@obsidian-note-reviewer/collaboration/*": ["../../packages/collaboration/src/*"]
    },
    "allowImportingTsExtensions": true,
    "noEmit": true
  }
}
